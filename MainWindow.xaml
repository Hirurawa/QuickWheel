<Window x:Class="QuickWheel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuickWheel" Height="300" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False">

    <Grid>
        <Ellipse Fill="#E61E1E1E" Stroke="#FF00D1FF" StrokeThickness="2" />

        <Line X1="150" Y1="0" X2="150" Y2="300" Stroke="#55FFFFFF" StrokeThickness="1" />
        <Line X1="0" Y1="150" X2="300" Y2="150" Stroke="#55FFFFFF" StrokeThickness="1" />

        <TextBlock Text="Explorer" HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="40,60,0,0" Foreground="White" FontSize="16" FontWeight="Bold"/>
        
        <TextBlock Text="Notepad" HorizontalAlignment="Right" VerticalAlignment="Top" 
                   Margin="0,60,40,0" Foreground="White" FontSize="16" FontWeight="Bold"/>

        <TextBlock Text="Chrome" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                   Margin="40,0,0,60" Foreground="White" FontSize="16" FontWeight="Bold"/>

        <TextBlock Text="Calc" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                   Margin="0,0,40,60" Foreground="White" FontSize="16" FontWeight="Bold"/>

        <Ellipse Width="80" Height="80" Fill="#FF101010" Stroke="#55FFFFFF" StrokeThickness="1"/>
    </Grid>
</Window>