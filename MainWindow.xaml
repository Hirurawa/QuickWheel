<Window x:Class="QuickWheel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="QuickWheel"
        Height="340"
        Width="340"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Grid>
        <Ellipse Width="300"
                Height="300"
                 HorizontalAlignment="Center"
                VerticalAlignment="Center"
                 Fill="#E6101010"
                Stroke="#FF00D1FF"
                StrokeThickness="2">
            <Ellipse.Effect>
                <DropShadowEffect Color="#FF00D1FF"
                        BlurRadius="20"
                        ShadowDepth="0"
                        Opacity="1"/>
            </Ellipse.Effect>
        </Ellipse>

        <tb:TaskbarIcon x:Name="MyNotifyIcon"
                        ToolTipText="QuickWheel is running"
                        IconSource="/Assets/app.ico">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit Configuration"
                            Click="Settings_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit QuickWheel"
                            Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <Ellipse Width="300"
                Height="300"
                 HorizontalAlignment="Center"
                VerticalAlignment="Center"
                 Fill="#F01E1E1E"
                Stroke="#33FFFFFF"
                StrokeThickness="1"/>

        <Path x:Name="SelectionHighlight"
              Fill="#4400D1FF"
              Stroke="#FF00D1FF"
              StrokeThickness="1"
              Opacity="0">
            <Path.Effect>
                <DropShadowEffect Color="#FF00D1FF"
                        BlurRadius="15"
                        ShadowDepth="0"
                        Opacity="0.8"/>
            </Path.Effect>
        </Path>

        <Grid x:Name="DynamicLayer"/>

        <Grid x:Name="StaticLayer">
            <Ellipse Width="80"
                    Height="80"
                    Fill="#FF101010"
                    Stroke="#55FFFFFF"
                    StrokeThickness="1">
                <Ellipse.Effect>
                    <DropShadowEffect Color="#FF00D1FF"
                            BlurRadius="15"
                            ShadowDepth="0"
                            Opacity="0.8"/>
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock x:Name="CenterLabel"
                       Text="Ready"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#FF00D1FF"
                       FontWeight="Bold"
                       FontSize="14"/>
        </Grid>
    </Grid>
</Window>