<Window x:Class="QuickWheel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuickWheel" 
        Height="300" 
        Width="300"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True" 
        ShowInTaskbar="False">

    <Grid x:Name="WheelCanvas">
        
        <Ellipse Fill="#E61E1E1E" Stroke="#FF00D1FF" StrokeThickness="2" />

        <Ellipse Width="80" Height="80" Fill="#FF101010" Stroke="#55FFFFFF" StrokeThickness="1"/>
        
        <TextBlock x:Name="CenterLabel" 
                   Text="" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="#FF00D1FF" 
                   FontWeight="Bold" 
                   FontSize="14"/>
    </Grid>
</Window>