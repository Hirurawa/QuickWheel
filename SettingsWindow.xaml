<Window x:Class="QuickWheel.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="550" Width="350"
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Current Activation Key:" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock x:Name="CurrentKeyText" Text="Mouse X2" FontWeight="Bold" FontSize="18" Foreground="#00D1FF" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button x:Name="ChangeButton" Content="Change Key" Click="ChangeButton_Click"
                    Padding="20,10" Background="#333333" Foreground="White" BorderBrush="#555555"/>

            <TextBlock x:Name="StatusText" Text="Press any key or mouse button..." Foreground="#FFD700"
                       HorizontalAlignment="Center" Margin="0,15,0,0" Visibility="Collapsed"/>

            <Separator Background="#555555" Margin="0,20"/>

            <!-- Activation Delay -->
            <TextBlock Text="Activation Delay" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                <TextBox x:Name="ActivationDelayInput" Width="50" TextAlignment="Right" Background="#333333" Foreground="#00D1FF" BorderBrush="#555555" FontWeight="Bold" FontSize="14"
                         LostFocus="ActivationDelayInput_LostFocus" KeyDown="ActivationDelayInput_KeyDown"/>
                <TextBlock Text=" ms" FontWeight="Bold" FontSize="14" Foreground="#00D1FF" VerticalAlignment="Center"/>
            </StackPanel>
            <Slider x:Name="ActivationDelaySlider" Minimum="50" Maximum="2000" Width="250" Margin="0,0,0,15" ValueChanged="ActivationDelaySlider_ValueChanged"/>

            <!-- Hover Interval -->
            <TextBlock Text="Hover Interval" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                <TextBox x:Name="HoverIntervalInput" Width="50" TextAlignment="Right" Background="#333333" Foreground="#00D1FF" BorderBrush="#555555" FontWeight="Bold" FontSize="14"
                         LostFocus="HoverIntervalInput_LostFocus" KeyDown="HoverIntervalInput_KeyDown"/>
                <TextBlock Text=" ms" FontWeight="Bold" FontSize="14" Foreground="#00D1FF" VerticalAlignment="Center"/>
            </StackPanel>
            <Slider x:Name="HoverIntervalSlider" Minimum="50" Maximum="2000" Width="250" Margin="0,0,0,20" ValueChanged="HoverIntervalSlider_ValueChanged"/>

            <!-- Fade In Duration -->
            <TextBlock Text="Fade In Duration" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                <TextBox x:Name="FadeInDurationInput" Width="50" TextAlignment="Right" Background="#333333" Foreground="#00D1FF" BorderBrush="#555555" FontWeight="Bold" FontSize="14"
                         LostFocus="FadeInDurationInput_LostFocus" KeyDown="FadeInDurationInput_KeyDown"/>
                <TextBlock Text=" ms" FontWeight="Bold" FontSize="14" Foreground="#00D1FF" VerticalAlignment="Center"/>
            </StackPanel>
            <Slider x:Name="FadeInDurationSlider" Minimum="0" Maximum="500" Width="250" Margin="0,0,0,20" ValueChanged="FadeInDurationSlider_ValueChanged"/>

            <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click"
                    Padding="20,10" Background="#28a745" Foreground="White" BorderBrush="#218838"/>
        </StackPanel>
    </Grid>
</Window>
