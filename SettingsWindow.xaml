<Window x:Class="QuickWheel.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="350"
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Current Activation Key:" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock x:Name="CurrentKeyText" Text="Mouse X2" FontWeight="Bold" FontSize="18" Foreground="#00D1FF" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button x:Name="ChangeButton" Content="Change Key" Click="ChangeButton_Click"
                    Padding="20,10" Background="#333333" Foreground="White" BorderBrush="#555555"/>

            <TextBlock x:Name="StatusText" Text="Press any key or mouse button..." Foreground="#FFD700"
                       HorizontalAlignment="Center" Margin="0,15,0,0" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
